<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chani.wander.ActivityRegistration">


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="582dp"
        tools:layout_editor_absoluteY="-6dp"
        tools:layout_editor_absoluteX="5dp">


    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="50dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="33dp" />

        <EditText
            android:id="@+id/txtEmailRegistration"
            android:layout_width="380dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="51dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmailRegistration"
            android:text="Password" />

        <EditText
            android:id="@+id/txtPasswordRegistration"
            android:layout_width="379dp"
            android:layout_height="43dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="121dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnRegistrationUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnRegistration_Click"
            android:text="REGISTRATION"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="198dp"
            android:layout_marginStart="27dp"
            android:layout_below="@+id/txtPasswordRegistration"
            android:layout_toEndOf="@+id/textView"
            android:layout_marginTop="50dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
